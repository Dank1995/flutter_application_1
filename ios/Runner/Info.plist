<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <!-- App Name -->
  <key>CFBundleName</key>
  <string>Cadence Coach</string>

  <!-- Your bundle ID (must match App Store Connect exactly) -->
  <key>CFBundleIdentifier</key>
  <string>GoldilocksAI</string>

  <!-- Human-facing version number -->
  <key>CFBundleShortVersionString</key>
  <string>1.0.0</string>

  <!-- Build number (increments every upload) -->
  <key>CFBundleVersion</key>
  <string>1</string>

  <!-- Permissions -->
  <key>NSBluetoothAlwaysUsageDescription</key>
  <string>Used to scan for cadence and heart rate sensors.</string>

  <key>NSBluetoothPeripheralUsageDescription</key>
  <string>Used to connect to BLE sensors.</string>

</dict>
</plist>
