<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <key>CFBundleName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleDisplayName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleIdentifier</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleExecutable</key>
    <string>Runner</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <key>CFBundleVersion</key>
    <string>37</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- All orientations required for iPad multitasking -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- âœ… Required location permission strings -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app uses GPS to measure your movement speed and calculate real-time training efficiency.</string>

    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Location data is needed to continuously track your velocity and optimise your cadence and performance during workouts.</string>

    <!-- Bluetooth (HR strap) permission -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>This app connects to your Bluetooth heart-rate strap for real-time physiological data.</string>

    <!-- HealthKit (if later re-added) -->
    <key>NSHealthShareUsageDescription</key>
    <string>This app reads heart rate data from your sensors to optimise your workout efficiency.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>This app writes your performance efficiency data into Apple Health.</string>

    <!-- No encryption -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>

</dict>
</plist>
