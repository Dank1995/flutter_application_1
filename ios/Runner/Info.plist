<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <key>CFBundleName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleDisplayName</key>
    <string>PhysiologicalOptimiser</string>

    <!-- Correct bundle ID -->
    <key>CFBundleIdentifier</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleExecutable</key>
    <string>Runner</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <!-- Incremented build number -->
    <key>CFBundleVersion</key>
    <string>39</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app uses GPS to measure velocity and optimise efficiency.</string>

    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>This app connects to Bluetooth heart-rate straps for optimisation.</string>

    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Bluetooth is required for real-time heart-rate data.</string>

    <!-- Optional HealthKit integration -->
    <key>NSHealthShareUsageDescription</key>
    <string>This app may read workout data from Apple Health for better optimisation.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>This app may write efficiency and optimisation metrics to Apple Health.</string>

    <!-- Background access -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-central</string>
        <string>location</string>
    </array>

    <!-- Apple encryption compliance -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>

</dict>
</plist>
