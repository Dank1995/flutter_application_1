<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Identity -->
    <key>CFBundleName</key>
    <string>PhysiologicalOptimiser</string>
    <key>CFBundleDisplayName</key>
    <string>Physiological Optimiser</string>
    <key>CFBundleIdentifier</key>
    <string>com.yourcompany.physiologicaloptimiser</string>
    <key>CFBundleExecutable</key>
    <string>Runner</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>73</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Launch Screen -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Supported Orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-central</string>
        <string>audio</string>
    </array>

    <!-- Bluetooth Permissions -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>This app connects to your Bluetooth heart rate strap for real-time optimisation.</string>

    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Used to read heart rate data from your BLE sensor.</string>
</dict>
</plist>
