<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <!-- App identity -->
    <key>CFBundleName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleDisplayName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleIdentifier</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleExecutable</key>
    <string>Runner</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <key>CFBundleVersion</key>
    <string>59</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Launch files -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Supported orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- BLUETOOTH PERMISSIONS -->
    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>This app connects to your Bluetooth heart rate strap for real-time physiological feedback.</string>

    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Used to read heart rate data from Bluetooth devices during workouts.</string>

    <!-- HAPTICS / VIBRATION (informational) -->
    <key>NSHapticsUsageDescription</key>
    <string>Used to provide haptic guidance cues during training sessions.</string>

    <key>NSVibrationUsageDescription</key>
    <string>Haptic vibration is used to signal rhythm adjustments during workouts.</string>

    <!-- BACKGROUND MODES (for HR straps in background) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>bluetooth-central</string>
    </array>

    <!-- Encryption field required by App Store -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>

</dict>
</plist>
