<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

    <key>CFBundleName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleDisplayName</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleIdentifier</key>
    <string>PhysiologicalOptimiser</string>

    <key>CFBundleExecutable</key>
    <string>Runner</string>

    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>

    <key>CFBundleVersion</key>
    <string>36</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- âœ… Fixed: must include all four orientations for both iPhone and iPad -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- Permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Used to measure real-time velocity during workouts.</string>

    <key>NSBluetoothAlwaysUsageDescription</key>
    <string>Used to connect to heart rate monitors for physiological optimisation.</string>

    <key>NSBluetoothPeripheralUsageDescription</key>
    <string>Used to connect to Bluetooth heart rate devices.</string>

    <key>NSHealthShareUsageDescription</key>
    <string>This app reads heart rate and workout data to optimise training efficiency.</string>

    <key>NSHealthUpdateUsageDescription</key>
    <string>This app writes training efficiency metrics to Apple Health.</string>

    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>

</dict>
</plist>
